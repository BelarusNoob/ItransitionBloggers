            <section class="s-content">

                <div class="row masonry-wrap">
                    <div class="masonry">

                        <div class="grid-sizer"></div>
                        {% for post in posts %}
                            <article class="masonry__brick entry format-standard" data-aos="fade-up">

                                <div class="entry__thumb">
                                    <a href="/{{ post.author.username }}/post/{{ post.slug }}" class="entry__thumb-link">
                                        <img src="images/thumbs/masonry/lamp-400.jpg"
                                             srcset="images/thumbs/masonry/lamp-400.jpg 1x, images/thumbs/masonry/lamp-800.jpg 2x"
                                             alt="">
                                    </a>
                                </div>

                                <div class="entry__text">
                                    <div class="entry__header">

                                        <div class="entry__date">
                                            <a href="#">{{ post.publishedAt|date('Y-m-d') }}</a>
                                            <a href="#">{{ post.author.fullName }}</a>
                                        </div>
                                        <h1 class="entry__title"><a href="/{{ post.author.username }}/post/{{ post.slug }}">{{ post.title }}</a></h1>

                                    </div>
                                    <div class="entry__excerpt">
                                        <p>
                                            {{ post.summary }}  </p>
                                    </div>
                                    <div class="entry__meta">
                                    <span class="entry__meta-links">
                                         {{ include('blog/_post_tags.html.twig') }}
                                    </span>
                                    </div>
                                </div>

                            </article>
                        {% else %}
                            <div class="well">{{ 'post.no_posts_found'|trans }}</div>
                        {% endfor %}
                        
                    </div>
                </div>

                <div class="row">
                    <div class="col-full">
                        <nav class="pgn">
                            <ul>
                                <li><a class="pgn__prev" href="#0">Prev</a></li>
