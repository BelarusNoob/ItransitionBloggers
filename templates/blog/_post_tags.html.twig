{% if not post.tags.empty %}
    <p class="s-content__tags">
        <span>Post Tags</span>

        <span class="s-content__tag-list">
            {% for tag in post.tags %}
                <a href="{{ path('homePage', {'tag': tag.name == app.request.query.get('tag') ? null : tag.name}) }}">
                    <i class="fa fa-tag"></i> {{ tag.name }}
                </a>
            {% endfor %}
        </span>
    </p>
{% endif %}

