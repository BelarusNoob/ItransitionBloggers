{% extends 'base.html.twig' %}

{% block body_id 'user_password' %}

{% block main %}
    <h1>Change password</h1>

    <div class="alert alert-info" role="alert">Change password errors</div>

    {{ form_start(form) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> Save
        </button>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('user_edit') }}" class="btn btn-lg btn-block btn-danger">
            <i class="fa fa-edit" aria-hidden="true"></i> Edit User
        </a>
    </div>
{% endblock %}
