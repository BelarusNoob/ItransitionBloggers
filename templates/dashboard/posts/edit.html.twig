{% extends 'dashboard_base.html.twig' %}

{% block body_id 'dashboard_posts_edit' %}

{% block body %}
    <h1>{{ 'title.edit_post'|trans({'%id%': post.id}) }}</h1>

    {{ include('dashboard/posts/_form.html.twig', {
        form: form,
        button_label: 'action.save'|trans,
        include_back_to_home_link: true,
    }, with_context = false) }}
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('dashboard_posts_show', {id: post.id}) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show_post'|trans }}
        </a>
    </div>

    <div class="section actions">
        {{ include('dashboard/posts/_delete_form.html.twig', {'username': post.author.username, 'id': post.id}, with_context = false) }}
    </div>

{% endblock %}
