{% extends 'dashboard_base.html.twig' %}

{% block body_id 'admin_post_new' %}

{% block body %}
<div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">{{ 'title.post_new'|trans }}</h3>
                    </div>
                    {{ form_start(form) }}
                        <div class="box-body">
                            <div class="form-group">
                                {{ form_errors(form.title) }}
                                <div class="col-sm-12">
                                    {{ form_label(form.title) }}
                                    {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_errors(form.summary) }}
                                <div class="col-sm-12">
                                    {{ form_label(form.summary) }}
                                    {{ form_widget(form.summary, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_errors(form.content) }}
                                <div class="col-sm-12">
                                    {{ form_label(form.content) }}
                                    {{ form_widget(form.content, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_errors(form.tags) }}
                                <div class="col-sm-12">
                                    {{ form_label(form.tags) }}
                                    {{ form_widget(form.tags, { 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    {{ form_row(form.image) }}
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create_post'|trans }}
                            </button>
                            {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}
                            <a href="{{ path('dashboard_posts_index') }}" class="btn btn-link">
                                <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
